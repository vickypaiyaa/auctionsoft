html
  head
    title Login
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h4(align='center') LOGIN
    .container
        .row.col-sm-6.col-md-offset-3
            form(action='/login', method='POST')
                table.table.table-responsive.table-hover.col-sm-5.col-md-5.col-lg-3.mx-auto
                    thead
                        tr
                        td
                            label(for='uname')
                            b Username
                        td
                            input(type='text', placeholder='Enter Username', class="form-control", name='username', required='')
                        tr
                        td
                            label(for='psw')
                            b Password
                        td
                            input(type='password', placeholder='Enter Password', class="form-control", name='password', required='')
                        tr
                        td(colspan='2' align="center")  #{message}
                        tr
                        td(colspan='2')
                            button(type='submit', class="btn btn-lg btn-primary btn-block") Login
